<script src="~/Scripts/Services/CoursesController.js"></script>
<script>
    @*$(document).ready(function () {
        GetCourses('@Url.Action("", "api/Courses")');
    });*@
</script>
<div class="container">
    <h2>Courses</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CourseModal" onclick="clearModalFields();">Add New Course</button><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-3">ID</div>
                <div class="col-sm-3">Course Name</div>
                <div class="col-sm-3">Student Capacity</div>
                <div class="col-sm-3">Actions</div>
            </div>
        </div>
        <div class="panel-body" id="CourseTable"></div>
    </div>
</div>
<div class="modal fade" id="CourseModal" tabindex="-1" role="dialog" aria-labelledby="CourseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="CourseModalLabel">Add Course</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Course Id</label>
                        <input type="text" class="form-control" id="CourseId" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="CourseName">Course Name</label>
                        <input type="text" class="form-control" id="CourseName" placeholder="CourseName" />
                    </div>
                    <div class="form-group">
                        <label for="StudentCapacity">Student Capacity</label>
                        <input type="text" class="form-control" id="StudentCapacity" placeholder="StudentCapacity" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return AddCourse();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="UpdateCourse($('#CourseId').val());">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
